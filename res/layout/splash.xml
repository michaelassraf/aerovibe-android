<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spalshFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/splashBackgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/splashButtonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/splashFacebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edges_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="Connect with Facebook !"
                android:textColor="@android:color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/semi_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/splashNativeSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/white_button_rounded_edges"
                android:gravity="center"
                android:padding="10dp"
                android:text="New ? Join Us !"
                android:textColor="@android:color/black"
                android:visibility="invisible" />

            <Button
                android:id="@+id/splashNativeLogInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/white_button_rounded_edges"
                android:padding="10dp"
                android:text="Coming Back ? Log in !"
                android:textColor="@android:color/black"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>